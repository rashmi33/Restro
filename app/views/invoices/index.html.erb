<center>
  <h1>Listing Invoices</h1>
  <br><br>
  <table cellpadding="10">
    <tr>
      <th>Code</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.code %></td>
        <td><%= invoice.amount %></td>
        <td><%= link_to 'Show', invoice_path(invoice) %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Delete', invoice_path(invoice), :method => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to 'Back To Restaurants', restaurants_path %>
</center>